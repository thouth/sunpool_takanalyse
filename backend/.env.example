# ========================================
# backend/.env.example
# ========================================

# Backend environment variables
NODE_ENV=development
PORT=3001
CORS_ORIGIN=http://localhost:3000
API_ACCESS_KEY=

# API Base URL (brukes for Ã¥ generere proxy URLs til satellittbilder)
# Lokal utvikling:
API_BASE_URL=http://localhost:3001/api
# Produksjon (Render):
# API_BASE_URL=https://solar-assessment-backend.onrender.com/api

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Weather & caching
WEATHER_CACHE_TTL_MS=3600000

# External services
BRREG_API_URL=https://data.brreg.no/enhetsregisteret/api
KARTVERKET_ADDRESS_API=https://ws.geonorge.no/adresser/v1
KARTVERKET_WMS_URL=https://wms.geonorge.no/skwms1/wms.nib
KARTVERKET_ELEVATION_API=https://ws.geonorge.no/hoydedata/v1

# Mock mode (set to true for development without external API access)
MOCK_EXTERNAL_APIS=false

# Mock satellite image (optional - for testing when WMS is down)
# MOCK_SATELLITE_IMAGE_URL=https://via.placeholder.com/800x800.jpg?text=Mock+Satellite+Image
