# backend/.env

# Environment
NODE_ENV=development
PORT=3001

# CORS - tillat frontend
CORS_ORIGIN=http://localhost:3000

# API Base URL for satellittbilder
API_BASE_URL=http://localhost:3001/api

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Weather & caching
WEATHER_CACHE_TTL_MS=3600000

# External services
BRREG_API_URL=https://data.brreg.no/enhetsregisteret/api
KARTVERKET_ADDRESS_API=https://ws.geonorge.no/adresser/v1
KARTVERKET_WMS_URL=https://wms.geonorge.no/skwms1/wms.nib
KARTVERKET_ELEVATION_API=https://ws.geonorge.no/hoydedata/v1

# VIKTIG: Sett til true for 책 bruke mock-data n책r eksterne APIer feiler
MOCK_EXTERNAL_APIS=true

# Mock satellite image URL (brukes n책r MOCK_EXTERNAL_APIS=true)
MOCK_SATELLITE_IMAGE_URL=https://via.placeholder.com/800x800.png?text=Satellittbilde+ikke+tilgjengelig

# For 책 ignorere SSL-problemer i development (IKKE bruk i produksjon!)
NODE_TLS_REJECT_UNAUTHORIZED=0
